{
    "compilerOptions": {
        "outDir": "dist",
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            }
        ]
    },
    "ts-node": {
        "esm": true,
        "transpileOnly": true,
        "require": ["tsconfig-paths/register"]
    },
    "include": ["src"]
}

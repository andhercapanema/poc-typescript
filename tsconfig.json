{
    "compilerOptions": {
        "target": "ES6",
        "outDir": "dist",
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "rootDirs": ["src", "tests"],
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            }
        ]
    },
    "ts-node": {
        "esm": true,
        "transpileOnly": true,
        "require": ["tsconfig-paths/register"]
    },
    "include": ["src", "tests"]
}
